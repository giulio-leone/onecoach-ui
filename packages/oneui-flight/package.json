{
  "name": "@giulio-leone/ui-flight",
  "version": "0.3.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./src/index.ts"
    },
    "./form": {
      "types": "./dist/form.d.ts",
      "import": "./dist/form.js",
      "default": "./src/form.ts"
    },
    "./use-smart-flight-search": {
      "types": "./dist/use-smart-flight-search.d.ts",
      "import": "./dist/use-smart-flight-search.js",
      "default": "./src/use-smart-flight-search.ts"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js",
      "default": "./src/types.ts"
    }
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "restricted"
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsup"
  },
  "dependencies": {
    "@giulio-leone/ui": "workspace:*",
    "@giulio-leone/lib-design-system": "workspace:*",
    "@giulio-leone/lib-shared": "workspace:*",
    "@giulio-leone/hooks": "workspace:*",
    "@giulio-leone/types": "workspace:*",
    "@phosphor-icons/react": "^2.1.7"
  },
  "peerDependencies": {
    "framer-motion": ">=11.0.0",
    "lucide-react": ">=0.400.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "next-intl": "^4.7.0"
  },
  "description": "Flight-specific UI components for OneCoach"
}
