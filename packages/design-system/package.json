{
  "name": "@giulio-leone/design-system",
  "version": "0.1.0",
  "type": "module",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./z-index": {
      "types": "./src/z-index.ts",
      "default": "./src/z-index.ts"
    },
    "./dark-mode-classes": {
      "types": "./src/dark-mode-classes.ts",
      "default": "./src/dark-mode-classes.ts"
    },
    "./tokens": {
      "types": "./src/tokens.ts",
      "default": "./src/tokens.ts"
    },
    "./token-utils": {
      "types": "./src/token-utils.ts",
      "default": "./src/token-utils.ts"
    },
    "./animations": {
      "types": "./src/animations.ts",
      "default": "./src/animations.ts"
    }
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@giulio-leone/lib-design-system": "workspace:*",
    "tailwindcss": "^4.1.18"
  },
  "peerDependencies": {
    "react": ">=19.1.0 <20",
    "react-native": ">=0.81 <0.83"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    }
  }
}
