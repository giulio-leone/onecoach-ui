{
  "name": "@giulio-leone/lib-design-system",
  "version": "0.1.0",
  "description": "Design system (tokens, theme, animations)",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./animations.native": {
      "types": "./src/animations.native.ts",
      "default": "./src/animations.native.ts"
